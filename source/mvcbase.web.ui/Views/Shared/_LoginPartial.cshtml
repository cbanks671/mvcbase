@using Microsoft.AspNet.Identity
<ul class="nav navbar-nav navbar-right">
    @if (Request.IsAuthenticated)
    {
        <li class="dropdown navbar-profile">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                <i class="icon-user"></i>
                @{
                    var name = User.Identity.Name;
                    <text> @name </text>
                }
                <span class="caret"></span>
            </a>

            <ul class="dropdown-menu" role="menu">
                <li>
                    @Html.ActionLink("Profile", "UserProfile", "Account", new { id = User.Identity.GetUserId(), area = "" }, new { @title = "View Profile" })
                </li>
                <li>
                    @Html.ActionLink("ChangePassword", "ChangePassword", "Account", new { id = User.Identity.GetUserId(), area = "" }, new { @title = "Change Password" })
                </li>
                <li class="divider"></li>
                <li>
                    @Html.ActionLink("Sign Out", "LogOff", "Account", new { area = "" }, null)
                </li>
            </ul>

        </li>
    }
    else
    {
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    }
</ul>